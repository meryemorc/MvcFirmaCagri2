@using MvcFirmaCagri.Models.Entity
@model List<TblCagrilar>
@{
    ViewBag.Title = "AktifCagrilar";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}


@if (TempData["AIHata"] != null)
{
    <div style="background-color: #ffcccc; padding: 15px; margin-bottom: 20px; border: 2px solid red; border-radius: 5px;">
        <h3 style="color: red;">⚠️ AI HATASI:</h3>
        <p style="font-size: 14px; color: #333;">@TempData["AIHata"]</p>
    </div>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Düzenle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Konu</td>
            <td>@x.Tarih</td>
            <td><a href="/Default/CagriGetir/@x.ID" class="btn btn-success">Düzenle</a></td>
            <td><a href="/Default/CagriDetay/@x.ID/" class="btn btn-info">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Default/YeniCagri/" class="btn btn-success">Yeni Çağrı Ekle</a>